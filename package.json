{
  "name": "morpho-token",
  "version": "1.0.0",
  "description": "Morpho token's contracts",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "forge test",
    "fix:sol": "prettier --write './src/**/*.sol' && prettier --write './test/**/*.sol'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-labs/morpho-token.git"
  },
  "keywords": [
    "defi",
    "token",
    "morpho"
  ],
  "author": "Merlin Egalite",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/morpho-labs/morpho-token/issues"
  },
  "homepage": "https://github.com/morpho-labs/morpho-token#readme",
  "dependencies": {
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "1.0.0-beta.19"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 80,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "preserve"
        }
      }
    ]
  }
}
